# =============================================
# WEEKLY - Variables de Entorno para Producción
# Dominio: getdevtools.com
# =============================================

# Configuración del servidor
NODE_ENV=production
PORT=4000

# Base de datos PostgreSQL
DB_HOST=postgres
DB_PORT=5432
DB_USER=weekly_user
DB_PASSWORD=weekly_password_2024
DB_NAME=weekly_global

# JWT
JWT_SECRET=your_super_secure_jwt_secret_key_here_change_this_in_production

# CORS
FRONTEND_URL=https://getdevtools.com
CORS_ORIGINS=https://getdevtools.com,https://admin.getdevtools.com,https://www.getdevtools.com

# Configuración de tenants
DEFAULT_TENANT=demo
ALLOWED_TENANTS=demo,admin,www,cliente,peluqueria,academia,cancha,veterinaria,odontologo,abogado

# Configuración de rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Configuración de desarrollo (desactivar en producción)
USE_DEV_MODE=false

# Configuración de email (opcional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Configuración de logs
LOG_LEVEL=info
LOG_FILE=logs/weekly.log

# Configuración de SSL (manejado por CapRover)
SSL_ENABLED=true
